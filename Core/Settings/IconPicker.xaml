<Window x:Class="gtt_sidebar.Core.Settings.IconPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Icon"
        Width="220"
        Height="240"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        Topmost="True"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Deactivated="Window_Deactivated">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Icons Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Custom Icon Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <TextBlock Text="Choose an icon" 
                       FontSize="10" 
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Icons Grid -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="8">
            <UniformGrid x:Name="IconsGrid" 
                        Columns="6" 
                        Margin="0">
                <!-- Icons will be added programmatically -->
            </UniformGrid>
        </ScrollViewer>

        <!-- Custom Icon Button -->
        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="8,6">
            <Button x:Name="CustomIconButton"
                    Content="📁 Browse for custom icon..."
                    Height="24"
                    FontSize="9"
                    Background="White"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Click="CustomIconButton_Click"/>
        </Border>
    </Grid>
</Window>