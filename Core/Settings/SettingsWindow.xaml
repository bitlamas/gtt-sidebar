<Window x:Class="gtt_sidebar.Core.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="350"
        Height="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Content -->
            <RowDefinition Height="50" />
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="Header_MouseLeftButtonDown"
                Cursor="SizeAll">
            <Grid Margin="12,0">
                <TextBlock Text="Settings"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           VerticalAlignment="Center" />
                <Button x:Name="CloseButton"
                        Content="×"
                        Width="24"
                        Height="24"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#666666"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CloseButton_Click"
                        Cursor="Hand" />
            </Grid>
        </Border>
        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20,20,20,10">
            <StackPanel>
                <!-- Window & Layout Section -->
                <Border Background="#F8F8F8"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Collapsible Header -->
                        <Border Background="#EEEEEE"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1"
                                Cursor="Hand"
                                MouseLeftButtonDown="WindowLayoutHeader_Click">
                            <Border Padding="12,8">
                                <Grid>
                                    <TextBlock Text="Window &amp; Layout"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#333333" />
                                    <TextBlock x:Name="WindowLayoutArrow"
                                               Text="▼"
                                               FontSize="10"
                                               Foreground="#666666"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </Border>
                        </Border>
                        <!-- Content (collapsible) -->
                        <StackPanel x:Name="WindowLayoutContent"
                                    Margin="16">
                            <!-- Position -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="Position"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="#666666"
                                           Margin="0,0,0,8" />
                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal">
                                    <RadioButton x:Name="RightPositionRadio"
                                                 Content="Right"
                                                 GroupName="Position"
                                                 FontSize="10"
                                                 Margin="0,0,20,0"
                                                 IsChecked="True" />
                                    <RadioButton x:Name="LeftPositionRadio"
                                                 Content="Left"
                                                 GroupName="Position"
                                                 FontSize="10" />
                                </StackPanel>
                            </Grid>
                            <!-- Width -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Margin="0,0,0,8">
                                    <TextBlock Text="Width"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               HorizontalAlignment="Left" />
                                    <TextBlock x:Name="WidthValueText"
                                               Text="122 px"
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider x:Name="WidthSlider"
                                        Grid.Row="1"
                                        Minimum="100"
                                        Maximum="200"
                                        Value="122"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        ValueChanged="WidthSlider_ValueChanged" />
                            </Grid>
                            <!-- Margin Top -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Margin="0,0,0,8">
                                    <TextBlock Text="Margin Top"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               HorizontalAlignment="Left" />
                                    <TextBlock x:Name="MarginTopValueText"
                                               Text="5 px"
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider x:Name="MarginTopSlider"
                                        Grid.Row="1"
                                        Minimum="0"
                                        Maximum="50"
                                        Value="5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        ValueChanged="MarginTopSlider_ValueChanged" />
                            </Grid>
                            <!-- Margin Bottom -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Margin="0,0,0,8">
                                    <TextBlock Text="Margin Bottom"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               HorizontalAlignment="Left" />
                                    <TextBlock x:Name="MarginBottomValueText"
                                               Text="5 px"
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider x:Name="MarginBottomSlider"
                                        Grid.Row="1"
                                        Minimum="0"
                                        Maximum="50"
                                        Value="5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        ValueChanged="MarginBottomSlider_ValueChanged" />
                            </Grid>
                            <!-- Margin Side -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Margin="0,0,0,8">
                                    <TextBlock Text="Margin Side"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               HorizontalAlignment="Left" />
                                    <TextBlock x:Name="MarginSideValueText"
                                               Text="5 px"
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider x:Name="MarginSideSlider"
                                        Grid.Row="1"
                                        Minimum="0"
                                        Maximum="50"
                                        Value="5"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        ValueChanged="MarginSideSlider_ValueChanged" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- Add this section to your SettingsWindow.xaml BEFORE the Shortcuts section -->
                <!-- System Monitor Settings Section -->
                <Border Grid.Row="4"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="3"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!-- Header -->
                        <Grid Grid.Row="0"
                              Background="#F8F8F8"
                              Height="35"
                              Cursor="Hand"
                              MouseLeftButtonDown="SystemMonitorHeader_Click">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="System Monitor"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       Foreground="#333333" />
                            <TextBlock x:Name="SystemMonitorToggle"
                                       Grid.Column="1"
                                       Text="▼"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Foreground="#666666" />
                        </Grid>
                        <!-- Content -->
                        <StackPanel x:Name="SystemMonitorContent"
                                    Grid.Row="1"
                                    Margin="15"
                                    Visibility="Visible">
                            <!-- CPU Threshold -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="CPU Alert:"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Foreground="#333333" />
                                <Slider x:Name="CpuThresholdSlider"
                                        Grid.Column="1"
                                        Minimum="50"
                                        Maximum="95"
                                        Value="85"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"
                                        Margin="10,0,10,0"
                                        ValueChanged="CpuThresholdSlider_ValueChanged" />
                                <TextBlock x:Name="CpuThresholdValue"
                                           Grid.Column="2"
                                           Text="85%"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="#333333" />
                            </Grid>
                            <!-- RAM Threshold -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="RAM Alert:"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Foreground="#333333" />
                                <Slider x:Name="RamThresholdSlider"
                                        Grid.Column="1"
                                        Minimum="50"
                                        Maximum="95"
                                        Value="85"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"
                                        Margin="10,0,10,0"
                                        ValueChanged="RamThresholdSlider_ValueChanged" />
                                <TextBlock x:Name="RamThresholdValue"
                                           Grid.Column="2"
                                           Text="85%"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="#333333" />
                            </Grid>
                            <!-- Ping Threshold -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Ping Alert:"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Foreground="#333333" />
                                <Slider x:Name="PingThresholdSlider"
                                        Grid.Column="1"
                                        Minimum="25"
                                        Maximum="500"
                                        Value="100"
                                        TickFrequency="25"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"
                                        Margin="10,0,10,0"
                                        ValueChanged="PingThresholdSlider_ValueChanged" />
                                <TextBlock x:Name="PingThresholdValue"
                                           Grid.Column="2"
                                           Text="100ms"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="#333333" />
                            </Grid>
                            <!-- Update Frequency -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Update Freq:"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Foreground="#333333" />
                                <ComboBox x:Name="UpdateFrequencyComboBox"
                                          Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Margin="10,0,0,0"
                                          SelectionChanged="UpdateFrequencyComboBox_SelectionChanged">
                                    <ComboBoxItem Content="1 second"
                                                  Tag="1" />
                                    <ComboBoxItem Content="2 seconds"
                                                  Tag="2"
                                                  IsSelected="True" />
                                    <ComboBoxItem Content="3 seconds"
                                                  Tag="3" />
                                    <ComboBoxItem Content="5 seconds"
                                                  Tag="5" />
                                    <ComboBoxItem Content="10 seconds"
                                                  Tag="10" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- Shortcuts Section -->
                <Border Background="#F8F8F8"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Collapsible Header -->
                        <Border Background="#EEEEEE"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1"
                                Cursor="Hand"
                                MouseLeftButtonDown="ShortcutsHeader_Click">
                            <Border Padding="12,8">
                                <Grid>
                                    <TextBlock Text="Shortcuts"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#333333" />
                                    <TextBlock x:Name="ShortcutsArrow"
                                               Text="▼"
                                               FontSize="10"
                                               Foreground="#666666"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </Border>
                        </Border>
                        <!-- Content (collapsible) -->
                        <StackPanel x:Name="ShortcutsContent"
                                    Margin="16">
                            <!-- Shortcuts List -->
                            <ScrollViewer x:Name="ShortcutsScrollViewer"
                                          MaxHeight="300"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Margin="0,0,0,12">
                                <StackPanel x:Name="ShortcutsContainer"
                                            Background="Transparent">
                                    <!-- Individual shortcut cards will be added here dynamically -->
                                </StackPanel>
                            </ScrollViewer>
                            <!-- Add New Shortcut Button -->
                            <Button x:Name="AddShortcutButton"
                                    Content="+ Add New Shortcut"
                                    Height="32"
                                    FontSize="10"
                                    Background="#4A90E2"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="0,0,0,8"
                                    Click="AddShortcutButton_Click" />
                            <!-- Help Text -->
                            <TextBlock Text="Drag shortcuts to reorder them. Changes are saved automatically."
                                       FontSize="9"
                                       Foreground="#999999"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock x:Name="ValidationText"
                           Text=""
                           FontSize="9"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Visibility="Collapsed" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Width="80"
                            Height="32"
                            FontSize="10"
                            Background="White"
                            BorderBrush="#C0C0C0"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Click="CancelButton_Click" />
                    <Button x:Name="ApplyButton"
                            Content="Apply"
                            Width="80"
                            Height="32"
                            FontSize="10"
                            Background="#4A90E2"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ApplyButton_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>