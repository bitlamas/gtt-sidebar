<Window x:Class="gtt_sidebar.Core.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="350"
        Height="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="50"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
        Background="#F5F5F5" 
        BorderBrush="#E0E0E0" 
        BorderThickness="0,0,0,1"
        MouseLeftButtonDown="Header_MouseLeftButtonDown"
        Cursor="SizeAll">
            <Grid Margin="12,0">
                <TextBlock Text="Settings" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          VerticalAlignment="Center"/>
                <Button x:Name="CloseButton"
                       Content="×"
                       Width="24" Height="24"
                       FontSize="16"
                       FontWeight="Bold"
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="#666666"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Click="CloseButton_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Margin="20,20,20,10">
            <StackPanel>

                <!-- Window & Layout Section -->
                <Border Background="#F8F8F8" 
       BorderBrush="#E0E0E0" 
       BorderThickness="1" 
       CornerRadius="3"
       Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Collapsible Header -->
                        <Border Background="#EEEEEE" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,0,0,1"
               Cursor="Hand"
               MouseLeftButtonDown="WindowLayoutHeader_Click">
                            <Border Padding="12,8">
                                <Grid>
                                    <TextBlock Text="Window &amp; Layout" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="#333333"/>
                                    <TextBlock x:Name="WindowLayoutArrow"
                              Text="▼" 
                              FontSize="10"
                              Foreground="#666666"
                              HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- Content (collapsible) -->
                        <StackPanel x:Name="WindowLayoutContent" Margin="16">

                            <!-- Position -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                      Text="Position" 
                                      FontSize="10" 
                                      FontWeight="SemiBold"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>

                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <RadioButton x:Name="RightPositionRadio" 
                                           Content="Right" 
                                           GroupName="Position"
                                           FontSize="10"
                                           Margin="0,0,20,0"
                                           IsChecked="True"/>
                                    <RadioButton x:Name="LeftPositionRadio" 
                                           Content="Left" 
                                           GroupName="Position"
                                           FontSize="10"/>
                                </StackPanel>
                            </Grid>

                            <!-- Width -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="Width" 
                                          FontSize="10" 
                                          FontWeight="SemiBold"
                                          Foreground="#666666"
                                          HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="WidthValueText"
                                          Text="122 px" 
                                          FontSize="10" 
                                          Foreground="#999999"
                                          HorizontalAlignment="Right"/>
                                </Grid>

                                <Slider x:Name="WidthSlider"
                                   Grid.Row="1"
                                   Minimum="100" 
                                   Maximum="200"
                                   Value="122"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="WidthSlider_ValueChanged"/>
                            </Grid>

                            <!-- Margin Top -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="Margin Top" 
                                          FontSize="10" 
                                          FontWeight="SemiBold"
                                          Foreground="#666666"
                                          HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="MarginTopValueText"
                                          Text="5 px" 
                                          FontSize="10" 
                                          Foreground="#999999"
                                          HorizontalAlignment="Right"/>
                                </Grid>

                                <Slider x:Name="MarginTopSlider"
                                   Grid.Row="1"
                                   Minimum="0" 
                                   Maximum="50"
                                   Value="5"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="MarginTopSlider_ValueChanged"/>
                            </Grid>

                            <!-- Margin Bottom -->
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="Margin Bottom" 
                                          FontSize="10" 
                                          FontWeight="SemiBold"
                                          Foreground="#666666"
                                          HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="MarginBottomValueText"
                                          Text="5 px" 
                                          FontSize="10" 
                                          Foreground="#999999"
                                          HorizontalAlignment="Right"/>
                                </Grid>

                                <Slider x:Name="MarginBottomSlider"
                                   Grid.Row="1"
                                   Minimum="0" 
                                   Maximum="50"
                                   Value="5"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="MarginBottomSlider_ValueChanged"/>
                            </Grid>

                            <!-- Margin Side -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="Margin Side" 
                                          FontSize="10" 
                                          FontWeight="SemiBold"
                                          Foreground="#666666"
                                          HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="MarginSideValueText"
                                          Text="5 px" 
                                          FontSize="10" 
                                          Foreground="#999999"
                                          HorizontalAlignment="Right"/>
                                </Grid>

                                <Slider x:Name="MarginSideSlider"
                                   Grid.Row="1"
                                   Minimum="0" 
                                   Maximum="50"
                                   Value="5"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="MarginSideSlider_ValueChanged"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock x:Name="ValidationText"
   Text=""
   FontSize="9"
   Foreground="Red"
   HorizontalAlignment="Center"
   Margin="0,0,0,10"
   Visibility="Collapsed"/>
                <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="20,0">
                <Button x:Name="CancelButton"
                       Content="Cancel"
                       Width="80" Height="32"
                       FontSize="10"
                       Background="White"
                       BorderBrush="#C0C0C0"
                       BorderThickness="1"
                       Margin="0,0,10,0"
                       Click="CancelButton_Click"/>
                <Button x:Name="ApplyButton"
                       Content="Apply"
                       Width="80" Height="32"
                       FontSize="10"
                       Background="#4A90E2"
                       Foreground="White"
                       BorderThickness="0"
                       Click="ApplyButton_Click"/>
            </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>