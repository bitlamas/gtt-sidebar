<Window x:Class="gtt_sidebar.Core.Settings.IconManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Icons"
        Width="600"
        Height="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="White"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Header -->
            <RowDefinition Height="40"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- Icon list -->
            <RowDefinition Height="60"/>
            <!-- Status/Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="Header_MouseLeftButtonDown"
                Cursor="SizeAll">
            <Grid Margin="12,0">
                <TextBlock Text="Manage Icons" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          VerticalAlignment="Center"/>
                <Button x:Name="CloseButton"
                       Content="×"
                       Width="24" Height="24"
                       FontSize="16"
                       FontWeight="Bold"
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="#666666"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Click="CloseButton_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Search and Info -->
        <Grid Grid.Row="1" Margin="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox" 
                     Grid.Column="0"
                     Height="26"
                     VerticalContentAlignment="Center"
                     BorderBrush="#D0D0D0"
                     BorderThickness="1"
                     Padding="8,0"
                     FontSize="10"
                     Text=""
                     TextChanged="SearchBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         VerticalAlignment="Center"
                                                         Margin="8,0"/>
                                            <TextBlock Text="Search icons..." 
                                                      FontSize="10"
                                                      Foreground="#999999"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0"
                                                      IsHitTestVisible="False">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <TextBlock Grid.Column="1" 
                       x:Name="InfoText"
                       Text="50 default icons included"
                       FontSize="10"
                       Foreground="#666666"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"/>
        </Grid>

        <!-- Icon List -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,1"
                Margin="15,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Background="#FAFAFA">
                <ItemsControl x:Name="IconListControl" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#E5E5E5"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Margin="0,2"
                                    Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Checkbox -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Name -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Category -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Status -->
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" 
                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"
                                             Checked="IconCheckBox_Changed"
                                             Unchecked="IconCheckBox_Changed"
                                             Tag="{Binding Name}"/>

                                    <StackPanel Grid.Column="1" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" 
                                                  FontSize="11"
                                                  FontWeight="Medium"
                                                  Foreground="#333333"/>
                                        <TextBlock Text="{Binding Name}" 
                                                  FontSize="9"
                                                  Foreground="#999999"
                                                  Margin="0,1,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                              Text="{Binding Category}" 
                                              FontSize="9"
                                              Foreground="#666666"
                                              VerticalAlignment="Center"
                                              Margin="10,0"
                                              Background="#F0F0F0"
                                              Padding="6,2"
                                              TextAlignment="Center"/>

                                    <TextBlock Grid.Column="3" 
                                              Text="{Binding Status}" 
                                              FontSize="9"
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0"
                                              MinWidth="70"
                                              TextAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#999999"/>
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="Downloaded">
                                                        <Setter Property="Foreground" Value="#28A745"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="Selected">
                                                        <Setter Property="Foreground" Value="#007BFF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Status Bar and Buttons -->
        <Grid Grid.Row="3" Background="#F8F8F8" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                       VerticalAlignment="Center"
                       Margin="10,0">
                <TextBlock x:Name="StatusText" 
                          Text="Selected: 0 icons | Downloaded: 0 icons"
                          FontSize="10"
                          Foreground="#666666"/>
                <TextBlock x:Name="StorageText" 
                          Text="Storage used: 0 KB"
                          FontSize="9"
                          Foreground="#999999"
                          Margin="0,2,0,0"/>
            </StackPanel>

            <Button x:Name="DownloadButton" 
                    Grid.Column="1"
                    Content="Download Selected" 
                    Width="130" Height="32"
                    FontSize="10"
                    Background="#007BFF"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="5"
                    Click="DownloadButton_Click"
                    IsEnabled="False"/>

            <Button x:Name="CloseWindowButton" 
                    Grid.Column="2"
                    Content="Close" 
                    Width="80" Height="32"
                    FontSize="10"
                    Background="White"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Margin="5"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>